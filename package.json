{
  "name": "phaser-jsx",
  "version": "0.4.0",
  "description": "Use JSX in Phaser.",
  "author": "Mark <mark@remarkablemark.org>",
  "main": "./cjs/index.js",
  "scripts": {
    "build": "npm run build:cjs && npm run build:umd",
    "build:cjs": "tsc --project tsconfig.build.json",
    "build:umd": "rollup --config --failAfterWarnings",
    "build:watch": "tsc --watch",
    "clean": "rm -rf cjs coverage docs umd",
    "docs": "typedoc",
    "docs:watch": "npm run docs -- --watch",
    "lint": "eslint --ignore-path .gitignore --ext .js,.mjs,.ts,.tsx .",
    "lint:fix": "npm run lint -- --fix",
    "lint:tsc": "tsc --noEmit",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable && npm run lint && npm run lint:tsc && npm run test:ci && npm run test:esm && npm run clean && npm run build",
    "test": "jest --watch",
    "test:ci": "CI=true jest --ci --colors --coverage",
    "test:esm": "npm run build:cjs && node --test src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/remarkablegames/phaser-jsx"
  },
  "bugs": {
    "url": "https://github.com/remarkablegames/phaser-jsx/issues"
  },
  "keywords": [
    "phaser-jsx",
    "phaser",
    "jsx",
    "react",
    "ui",
    "game"
  ],
  "dependencies": {
    "@types/react": "18.2.55"
  },
  "devDependencies": {
    "@commitlint/cli": "18.6.0",
    "@commitlint/config-conventional": "18.6.0",
    "@rollup/plugin-commonjs": "25.0.7",
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-typescript": "11.1.6",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.17",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "canvas": "2.11.2",
    "eslint": "8.56.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-simple-import-sort": "11.0.0",
    "eslint-plugin-tsdoc": "0.2.17",
    "global-jsdom": "24.0.0",
    "husky": "9.0.10",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-watch-typeahead": "2.2.2",
    "lint-staged": "15.2.2",
    "phaser": "3.70.0",
    "phaser3spectorjs": "0.0.8",
    "pinst": "3.0.0",
    "prettier": "3.2.5",
    "react": "18.2.0",
    "rollup": "4.9.6",
    "ts-jest": "29.1.2",
    "typedoc": "0.25.7",
    "typescript": "5.3.3"
  },
  "peerDependencies": {
    "phaser": "3"
  },
  "files": [
    "cjs/",
    "jsx-dev-runtime/",
    "jsx-runtime/",
    "src/",
    "umd/"
  ],
  "license": "MIT"
}
